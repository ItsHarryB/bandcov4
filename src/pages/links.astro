---
import BaseLayout from '../layouts/BaseLayout.astro';
import Social from '../components/Social.jsx';

const pageTitle = "Links";

// Always include `url`, set to null if not used
const socials = [
  { platform: "Twitter", username: "ItsHarryB_", url: null },
  { platform: "GitHub", username: "ItsHarryB", url: null },
  { platform: "LinkedIn", username: null, url: "https://www.linkedin.com/in/harry-brighton-8a2b971a4/" },
  { platform: "Instagram", username: "ItsHarryB_", url: null },
  { platform: "Bluesky", username: "harryb1.bsky.social", url: null }
];
---
<BaseLayout>
  <div class="page-center">
    <h1>{pageTitle}</h1>
  </div>

  <div class="social-cards-grid">
    {socials.map((s) => (
      <Social platform={s.platform} username={s.username} url={s.url} />
    ))}
  </div>
</BaseLayout>
